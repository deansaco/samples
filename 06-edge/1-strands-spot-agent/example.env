# Boston Dynamics Spot Robot Agent Configuration
# Copy this file to .env and update with your settings

# LLM Model Configuration (see Strands docs for supported models)
# AWS Bedrock models:
MODEL=global.anthropic.claude-sonnet-4-5-20250929-v1:0
# OpenAI models:
# MODEL=gpt-4
# Anthropic API models:
# MODEL=claude-sonnet-4-5-20250929

# LLM Provider Credentials
# For AWS Bedrock:
AWS_REGION=us-east-1


# Robot Connection Settings
ROBOT_HOSTNAME="192.168.80.3"
# ROBOT_USERNAME=admin
# ROBOT_PASSWORD=your-password

# Logging Configuration
LOG_LEVEL=INFO

# Safety Settings
# Maximum movement duration in seconds (safety limit)
MAX_MOVEMENT_DURATION=10.0

# Maximum movement speed in m/s (safety limit)
MAX_MOVEMENT_SPEED=1.5

# Maximum angular speed in rad/s (safety limit)
MAX_ANGULAR_SPEED=2.0
